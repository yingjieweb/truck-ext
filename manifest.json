{
  "manifest_version": 3,
  "name": "truck-ext",
  "version": "0.0.1",
  "description": "A Chrome extension for enhancing the thresh devtool function.",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["http://*:*/devtool/*"],
      "js": ["src/content-scripts/threshDevtool/index.js"]
    },
    {
      "matches": ["https://dmpt.amh-group.com/*"],
      "js": ["src/content-scripts/dmptNotify/index.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": ["src/content-scripts/threshDevtool/style.css"]
    },
    {
      "matches": ["https://dmpt.amh-group.com/*"],
      "resources": ["src/content-scripts/dmptNotify/style.css"]
    }
  ],
  "icons": {
    "16": "src/assets/icon16.png",
    "48": "src/assets/icon48.png",
    "128": "src/assets/icon128.png"
  }
}
